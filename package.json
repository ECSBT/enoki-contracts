{
    "name": "enoki-contracts",
    "devDependencies": {
        "@nomiclabs/buidler": "^1.4.7",
        "@nomiclabs/buidler-ethers": "^2.0.2",
        "@nomiclabs/buidler-waffle": "^2.1.0",
        "@types/chai": "^4.2.12",
        "@types/mocha": "^8.0.3",
        "@types/node": "^14.11.2",
        "chai": "^4.2.0",
        "ethereum-waffle": "^3.1.0",
        "ethers": "^5.0.17",
        "ethlint": "^1.2.5",
        "prettier": "^2.1.1",
        "prettier-plugin-solidity": "^1.0.0-alpha.57",
        "truffle-typings": "^1.0.8",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.3"
    },
    "scripts": {
        "lint": "prettier --list-different **/*.sol **/*.json",
        "lint:check": "prettier --check **/*.sol **/*.json",
        "lint:fix": "prettier --write **/*.sol **/*.json",
        "test": "npx buidler test --network ganache",
        "test-upgrades": "npx buidler test test/upgrades.ts --network ganache",
        "test-simulation": "npx buidler test test/simulate-core.ts --network ganache",
        "run-testnet": "sh ./run-testnet.sh",
        "deploy-testnet": "npx buidler run scripts/deploy-testnet.ts --show-stack-traces --no-compile --network ganache",
        "deploy-mainnet": "npx buidler run scripts/deploy-mainnet.ts --no-compile --network mainnet",
        "deploy-pools-testnet": "npx buidler run scripts/deploy-pools-testnet.ts --show-stack-traces --no-compile --network ganache",
        "deploy-pools-forknet": "npx buidler run scripts/deploy-pools-testnet.ts --show-stack-traces --no-compile --network forknet",
        "deploy-pools-mainnet": "npx buidler run scripts/deploy-pools-mainnet.ts --no-compile --network mainnet"

    },
    "dependencies": {
        "@nomiclabs/buidler-etherscan": "^2.1.0",
        "@openzeppelin/buidler-upgrades": "^1.2.0",
        "@openzeppelin/cli": "^2.8.2",
        "@openzeppelin/contracts": "^3.2.0",
        "@openzeppelin/contracts-ethereum-package": "^3.0.0",
        "@openzeppelin/upgrades": "^2.8.0",
        "@types/jest": "^26.0.14",
        "axios": "^0.20.0",
        "dotenv": "^8.2.0",
        "ganache-core": "^2.11.3",
        "jest": "^26.4.2",
        "node-fetch": "^2.6.1",
        "truffle": "^5.1.45",
        "ts-jest": "^26.4.0",
        "web3": "^1.3.0"
    }
}
